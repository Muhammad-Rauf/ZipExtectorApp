<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.zipextectorapp">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE"
        tools:ignore="ScopedStorage" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/app_zipicon"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ZipExtectorApp"
        tools:targetApi="31">
        <activity
            android:name=".Activities.PlayVideos"
            android:exported="false" />
        <activity
            android:name=".Activities.AllApkFileScreen"
            android:exported="false" />
        <activity
            android:name=".Activities.AllZipScreen"
            android:exported="false" />
        <activity
            android:name=".Activities.AllDocumentsScreen"
            android:exported="false" />
        <activity
            android:name=".Activities.AllAudiosScreen"
            android:exported="false" />
        <activity
            android:name=".Activities.AllVideosScreen"
            android:exported="false" />
        <activity
            android:name=".Activities.AllimagesScreen"
            android:exported="false" />
        <activity
            android:name=".Activities.FolderListScreen"
            android:exported="false" />
        <activity
            android:name=".Activities.HomeScreen"
            android:exported="false" />
        <activity
            android:name=".Activities.SplashScreen"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.DisplayAllData"
            android:exported="false" />
        <activity
            android:name=".Activities.MainActivity"
            android:exported="true" />
    </application>

</manifest>