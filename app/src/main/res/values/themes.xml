<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ZipExtectorApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/darksky</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="tab_top_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/robotomedium</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="tabIndicatorFullWidth">false</item>
    </style>
    <style name="loadingDialog" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="android:windowMinWidthMajor">60%</item>
        <item name="android:windowMinWidthMinor">60%</item>
        <item name="android:windowBackground">@drawable/shapedialogcorner</item>
        <item name="android:backgroundDimEnabled">true</item>

        <item name="android:background">@android:color/transparent</item>
    </style>
    <style name="CustomDialog1" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="android:windowMinWidthMajor">87%</item>
        <item name="android:windowMinWidthMinor">87%</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@drawable/shapedialogcorner</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <style name="bottom_sheet_style" parent="Theme.Design.BottomSheetDialog" >
        <item name="bottomSheetStyle">@style/Model</item>
    </style>
    <style name="Model" parent="Widget.Design.BottomSheet.Modal" >
        <item name="android:background">@drawable/delete_sheet</item>
    </style>

    <style name="Theme.ZipExtectorApp.CustomToolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
</resources>